<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavigationDrawerActivity"
    tools:showIn="@layout/app_bar_navigation_drawer">

    <FrameLayout
        android:id="@+id/screen_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:background="@drawable/border">

                <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/viewPager_layout_margin" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/outerLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="265dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        android:id="@+id/electrician">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_electrician"
                                android:layout_centerInParent="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electrician"
                            android:textColor="@color/black"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:id="@+id/Plumber">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_plumber"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Plumber"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        android:id="@+id/Carpenter">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_carpenter"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carpenter"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--SECOND ROW-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@drawable/border">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        android:id="@+id/Health">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_heartbeat"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Health"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        android:id="@+id/Appliance">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_air_conditioner"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Appliance Repair"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        android:id="@+id/Tutor">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_open_book"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home Tutor"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lb1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/outerLayout"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:background="@drawable/maths1"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/longButton1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Maths at Home"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black1"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/longButton1_txt"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:text="Class XII"
                        android:textStyle="bold"
                        android:textColor="@color/orange"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lb2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/lb1"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:background="@drawable/yoga1"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/longButton2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Yoga at Home"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black1"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lb3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lb2"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:background="@drawable/washing1"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/longButton3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Washing Machine Repair"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black1"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bottomSpace"
                android:layout_marginTop="25dp"
                android:layout_below="@id/lb3"
                android:orientation="horizontal">

            </ImageView>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>