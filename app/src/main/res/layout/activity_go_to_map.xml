<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="   Hi, nice to meet you!"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Tell  us  your  location  to  show  you  the"
        android:textAlignment="center"
        android:textColor="#e7191616"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="199dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="services  around  you"
        android:textColor="#e7191616"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/button_to_map"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="305dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/abcd"
        android:padding="10dp"
        android:text="Use current location"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="277dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:text="We will only access your location while you are using the app "
        android:textAlignment="center"
        android:textColor="#2c2c2c"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-220dp"
        android:text="to improve your experience"
        android:textColor="#2c2c2c"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="161dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:background="#FFFFFF"
        android:text="or,Skip and Enter later"
        android:textAlignment="center"
        android:textColor="#2c2c2c" />


</RelativeLayout>